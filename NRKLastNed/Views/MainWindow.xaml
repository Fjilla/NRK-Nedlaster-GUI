<Window x:Class="NRKLastNed.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="NRK Nedlaster GUI" Height="600" Width="1050"
        Background="{DynamicResource BgDark}"
        Foreground="{DynamicResource TextColor}"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/logo.ico">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="NRK NEDLASTER GUI" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource AccentColor}" VerticalAlignment="Top"/>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
            <TextBlock Text="{Binding UpdateNotificationText}" 
                       Foreground="#FF4444" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center" 
                       Margin="0,0,20,0"
                       FontSize="14">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>

            <Button Content="Innstillinger" Click="OpenSettings_Click" Style="{StaticResource MenuButtonStyle}" Margin="0,0,10,0"/>
            <Button Content="Om" Click="OpenAbout_Click" Style="{StaticResource MenuButtonStyle}"/>
        </StackPanel>

        <Border Grid.Row="1" Background="{DynamicResource BgLight}" CornerRadius="10" Padding="15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="URL (Serie, Episode eller Film):" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <TextBox Grid.Column="1" 
                         Text="{Binding InputUrl}" 
                         FontSize="14" 
                         Background="{DynamicResource BgInput}"
                         BorderBrush="{DynamicResource BorderColor}"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"
                         Padding="8,5"/>

                <Button Grid.Column="2" Content="LEGG TIL" Command="{Binding AddCommand}" Margin="10,0,0,0" Width="100"/>
            </Grid>
        </Border>

        <DataGrid Grid.Row="2" ItemsSource="{Binding DownloadItems}" 
                  SelectedItem="{Binding SelectedGridItem}"
                  AutoGenerateColumns="False" Background="{DynamicResource BgLight}" 
                  HeadersVisibility="Column" BorderThickness="0"
                  RowBackground="{DynamicResource BgLight}" Foreground="{DynamicResource TextColor}"
                  GridLinesVisibility="None" CanUserAddRows="False">

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Fjern valgt" Command="{Binding RemoveItemCommand}"/>
                    <MenuItem Header="Fjern alle ferdige" Command="{Binding RemoveFinishedCommand}"/>
                    <Separator/>
                    <MenuItem Header="Åpne nedlastningsmappe" Command="{Binding OpenFolderCommand}"/>
                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="#" Binding="{Binding IsSelected}" Width="40"/>
                <DataGridTextColumn Header="Sesong/Ep" Binding="{Binding SeasonEpisode}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Tittel" Binding="{Binding Title}" Width="*" IsReadOnly="True"/>

                <DataGridTemplateColumn Header="Oppløsning" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding AvailableResolutions}" 
                                      SelectedItem="{Binding SelectedResolution, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Lydspråk" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding AvailableLanguages}" 
                                      SelectedItem="{Binding SelectedLanguage, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="180" IsReadOnly="True"/>

                <DataGridTemplateColumn Header="Fremdrift" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar Value="{Binding Progress, Mode=OneWay}" Maximum="100" Height="15" Foreground="{DynamicResource AccentColor}" Background="#444" BorderThickness="0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{DynamicResource BgInput}"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>

        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource TextMuted}"/>
                <TextBlock Text="{Binding BatchStatusMessage}" Foreground="{DynamicResource AccentColor}" FontSize="11" Margin="0,2,0,0"/>
                <ProgressBar Value="{Binding TotalProgress}" Height="5" Margin="0,5,10,0" Background="#333" BorderThickness="0" Foreground="{DynamicResource AccentColor}"/>
            </StackPanel>

            <Button Grid.Column="1" Content="{Binding StartButtonText}" Command="{Binding DownloadCommand}" FontSize="16" Padding="30,10">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding StartButtonText}" Value="AVBRYT">
                                <Setter Property="Background" Value="#FF4444"/>
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>